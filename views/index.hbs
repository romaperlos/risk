<div class=".container-fluid center col-sm ">
  <img src="/images/logo.png" id="logo">
  <script defer src="/signin.js"></script>
  {{#if username}}
  <button style="background-color: #62393e" type="button" class="btn btn-success"
    onclick="window.location.href = '/riskList';">Реестр</button>
  <button style="background-color: #62393e" type="button" class="btn btn-info"
    onclick="window.location.href = '/reports';">Отчёты</button>
  {{else}}
  <form id="signinForm" method="POST" action="/signin">
    <div class="form-group">
      <label for="username">Логин:
        <input id="username" class="form-control" name="username" type="text" required pattern="[A-Za-z]\w+"
          minlength="4" title="Латинские буквы, цифры и _">
      </label>
    </div>
    <div class="form-group">
      <label for="password">Пароль:
        <input id="password" class="form-control" name="password" type="password" required minlength="6">
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
  </form>
  {{/if}}
</div>
