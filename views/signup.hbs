<div class="centerForm">
  <h1>Регистрация</h1>
  <div class="centerFormSign">
  <form id="signupForm" method="POST" action="/signup">
    <div class="form-group">
      <label for="username">Логин:
        <input id="username" class="form-control" name="username" type="text" required pattern="[A-Za-z]\w+"
          minlength="4" title="Латинские буквы, цифры и _">
      </label>
    </div>
    <div class="form-group">
      <label for="email">Email:
        <input id="email" class="form-control" name="email" type="email" required>
      </label>
    </div>
    <div class="form-group">
      <label for="password">Пароль:
        <input id="password" class="form-control" name="password" type="password" required minlength="6">
      </label>
    </div>
    </div>
    <button type="submit">Зарегистрироваться</button>
  </form>
</div>